{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "clipboard:allow-write-files",
    "fs:default",
    {
      "identifier": "fs:allow-mkdir",
      "allow": [{"path": "$DOWNLOAD/*"}]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [{"path": "$DOWNLOAD/**/*"}]
    },
    "fs:allow-write"
  ]
}